<h1>Listing paths</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Creator</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @paths.each do |path| %>
  <tr>
    <td><%= path.name %></td>
    <td><%= path.creator %></td>
    <td><%= path.created_at %></td>
    <td><%= link_to 'Show', path %></td>
    <td><%= link_to 'Edit', edit_path_path(path) %></td>
    <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

